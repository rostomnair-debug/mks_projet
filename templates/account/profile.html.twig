{% extends 'base.html.twig' %}

{% block title %}MKS | Mon profil{% endblock %}

{% block breadcrumb %}
    {% set currentTab = activeTab|default('profile') %}
    {% set tabLabel = currentTab == 'reservations'
        ? 'Réservations'
        : (currentTab == 'requests'
            ? 'Demandes'
            : (currentTab == 'events'
                ? 'Mes annonces'
                : (currentTab == 'favorites' ? 'Favoris' : 'Profil'))) %}
    <a href="{{ path('home') }}">Accueil</a>
    <span class="mx-2">›</span>
    <a href="{{ path('account_profile') }}">Mon espace</a>
    <span class="mx-2">›</span>
    <span>{{ tabLabel }}</span>
{% endblock %}

{% block body %}
<section class="admin-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h4 mb-1">Mon espace</h1>
            <p class="text-muted mb-0">Gérez vos informations et vos activités.</p>
        </div>
    </div>

    {% set tab = activeTab|default('profile') %}
    {% set tabLabel = tab == 'favorites'
        ? 'Favoris'
        : (tab == 'reservations'
            ? 'Réservations'
            : (tab == 'requests'
                ? 'Demandes spéciales'
                : (tab == 'events' ? 'Mes annonces' : 'Profil'))) %}

    <div class="dropdown d-md-none mb-3">
        <button class="btn btn-outline-primary btn-pill dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img class="icon-svg icon-dots" src="{{ asset('assets/icons/three-dots-vertical.svg') }}" alt="" aria-hidden="true">
            <span>{{ tabLabel }}</span>
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item {{ tab == 'profile' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'profile'}) }}">Profil</a></li>
            <li><a class="dropdown-item {{ tab == 'favorites' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'favorites'}) }}">Favoris</a></li>
            <li><a class="dropdown-item {{ tab == 'reservations' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'reservations'}) }}">Réservations</a></li>
            <li>
                <a class="dropdown-item {{ tab == 'requests' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'requests'}) }}">
                    Demandes spéciales
                    {% if (requestNotifCount|default(0)) > 0 %}
                        <span class="tab-badge">{{ requestNotifCount }}</span>
                    {% endif %}
                </a>
            </li>
            {% if is_granted('ROLE_ANNOUNCER') or is_granted('ROLE_ADMIN') %}
                <li><a class="dropdown-item {{ tab == 'events' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'events'}) }}">Mes annonces</a></li>
            {% endif %}
        </ul>
    </div>

    <ul class="nav nav-tabs mks-tabs mb-4 d-none d-md-flex">
        <li class="nav-item" role="presentation">
            <a class="nav-link {{ tab == 'profile' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'profile'}) }}">Profil</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link {{ tab == 'favorites' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'favorites'}) }}">Favoris</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link {{ tab == 'reservations' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'reservations'}) }}">Réservations</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link {{ tab == 'requests' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'requests'}) }}">
                Demandes spéciales
                {% if (requestNotifCount|default(0)) > 0 %}
                    <span class="tab-badge">{{ requestNotifCount }}</span>
                {% endif %}
            </a>
        </li>
        {% if is_granted('ROLE_ANNOUNCER') or is_granted('ROLE_ADMIN') %}
            <li class="nav-item ms-auto" role="presentation">
                <a class="nav-link tab-announce {{ tab == 'events' ? 'active' : '' }}" href="{{ path('account_profile', {tab: 'events'}) }}">
                    <img class="icon-svg icon-announce me-1" src="{{ asset('assets/icons/megaphone-fill.svg') }}" alt="" aria-hidden="true">Mes annonces
                </a>
            </li>
        {% endif %}
    </ul>

    {% if tab == 'profile' %}
            <div class="admin-card">
                {{ form_start(profileForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    {{ form_errors(profileForm) }}
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <img class="profile-avatar" src="{{ asset(app.user.profileImage ?? 'assets/images/avatar-default.svg') }}" alt="Avatar">
                        <div>
                            <div class="fw-semibold">Bonjour, {{ app.user.username }}</div>
                            <div class="badge-group mt-1">
                                {% if is_granted('ROLE_ANNOUNCER') %}
                                    <span class="badge-pill badge-announce d-inline-flex align-items-center gap-1">
                                        <img class="icon-svg" src="{{ asset('assets/icons/megaphone.svg') }}" alt="" aria-hidden="true">Annonceur
                                    </span>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <span class="badge-pill badge-success d-inline-flex align-items-center gap-1">
                                        <img class="icon-svg" src="{{ asset('assets/icons/shield-check.svg') }}" alt="" aria-hidden="true">Admin
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">{{ form_row(profileForm.firstName) }}</div>
                        <div class="col-12 col-md-6">{{ form_row(profileForm.lastName) }}</div>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">{{ form_row(profileForm.username) }}</div>
                        <div class="col-12 col-md-6">{{ form_row(profileForm.birthDate) }}</div>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">{{ form_row(profileForm.email) }}</div>
                    </div>
                    {{ form_row(profileForm.profileImageFile) }}
                    {{ form_row(profileForm.plainPassword) }}
                    <button class="btn btn-primary btn-pill w-100" type="submit">Enregistrer</button>
                {{ form_end(profileForm) }}
                <p class="text-muted small mt-3">* champs obligatoires</p>
            </div>

            {% if not is_granted('ROLE_ANNOUNCER') and not is_granted('ROLE_ADMIN') %}
                <div class="admin-card mt-4">
                    <h2 class="h6 mb-2">Devenir annonceur</h2>
                    <p class="text-muted mb-3">Publiez vos événements en quelques clics.</p>
                    <form method="post" action="{{ path('account_become_announcer') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('become_announcer') }}">
                        <button class="btn btn-secondary btn-pill w-100" type="submit">Activer mon compte annonceur</button>
                    </form>
                </div>
            {% endif %}

            <div class="admin-card mt-4">
                <h2 class="h6 mb-2 text-danger">Supprimer mon compte</h2>
                <p class="text-muted mb-3">Cette action est définitive. Vos données personnelles seront supprimées.</p>
                <form method="post" action="{{ path('account_delete') }}" onsubmit="return confirm('Supprimer définitivement votre compte ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_account') }}">
                    <button class="btn btn-outline-danger btn-pill w-100" type="submit">Supprimer mon compte</button>
                </form>
            </div>
    {% elseif tab == 'favorites' %}
            <div class="admin-card">
                <h2 class="h6 mb-3">Mes favoris</h2>
                <div class="table-responsive admin-table">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Événement</th>
                                <th>Date</th>
                                <th>Lieu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for favorite in favorites %}
                                {% set favEvent = favorite.event %}
                                <tr>
                                    <td>
                                        <div class="fw-semibold">{{ favEvent.title }}</div>
                                        <small class="text-muted">{{ favEvent.category.name }}</small>
                                    </td>
                                    <td>{{ favEvent.startAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ favEvent.venueName }}</td>
                                    <td class="text-end">
                                        <a class="btn btn-outline-primary btn-sm" href="{{ path('event_show', {slug: favEvent.slug}) }}" title="Voir" aria-label="Voir">
                                            <img class="icon-svg" src="{{ asset('assets/icons/eye.svg') }}" alt="">
                                        </a>
                                        <form class="d-inline" method="post" action="{{ path('favorite_toggle', {id: favEvent.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('favorite_event_' ~ favEvent.id) }}">
                                            <input type="hidden" name="target" value="{{ path('account_profile', {tab: 'favorites'}) }}">
                                            <button class="btn btn-outline-danger btn-sm" type="submit" title="Retirer" aria-label="Retirer">
                                                <img class="icon-svg" src="{{ asset('assets/icons/heartbreak.svg') }}" alt="">
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Aucun favori pour le moment.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                </table>
            </div>
            {% if pagination %}
                {% include 'partials/pagination.html.twig' with {
                    route: 'account_profile',
                    params: {tab: 'favorites'},
                    page: pagination.page,
                    pages: pagination.pages
                } %}
            {% endif %}
        </div>
    {% elseif tab == 'reservations' %}
            <div class="table-responsive admin-table">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Événement</th>
                            <th>Date</th>
                            <th>Places</th>
                            <th>Statut</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservations %}
                            <tr>
                                <td>
                                    <div class="fw-semibold">{{ reservation.event.title }}</div>
                                    <small class="text-muted">{{ reservation.event.venueName }}</small>
                                </td>
                                <td>{{ reservation.event.startAt|date('d/m/Y H:i') }}</td>
                                <td>{{ reservation.quantity }}</td>
                                <td>
                                    {% if reservation.isCancelled %}
                                        <span class="badge-pill badge-danger">Annulé</span>
                                    {% else %}
                                        <span class="badge-pill badge-success">Confirmé</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    {% if not reservation.isCancelled and reservation.event.startAt > date() %}
                                        <form method="post" action="{{ path('reservation_cancel', {id: reservation.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('cancel_reservation_' ~ reservation.id) }}">
                                            <button class="btn btn-outline-danger btn-sm" type="submit" title="Annuler" aria-label="Annuler">
                                                <img class="icon-svg" src="{{ asset('assets/icons/x-circle.svg') }}" alt="">
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">Aucune réservation pour le moment.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% if pagination %}
                {% include 'partials/pagination.html.twig' with {
                    route: 'account_profile',
                    params: {tab: 'reservations'},
                    page: pagination.page,
                    pages: pagination.pages
                } %}
            {% endif %}
    {% elseif tab == 'requests' %}
            <div class="admin-card">
                <h2 class="h6 mb-3">Mes demandes (+6 places)</h2>
                <div class="table-responsive admin-table">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Sujet</th>
                                <th>Statut</th>
                                <th>Réponse</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for req in contactRequests %}
                                <tr>
                                    <td>{{ req.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ req.subject }}</td>
                                    <td>
                                        {% if req.status == 'answered' %}
                                            <span class="badge-pill badge-success">Répondu</span>
                                        {% elseif req.status == 'confirmed' %}
                                            <span class="badge-pill badge-success">Confirmé</span>
                                        {% else %}
                                            <span class="badge-pill badge-warning">En attente</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if req.adminResponse %}
                                            <span class="text-muted">{{ req.adminResponse }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Aucune demande.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% if pagination %}
                    {% include 'partials/pagination.html.twig' with {
                        route: 'account_profile',
                        params: {tab: 'requests'},
                        page: pagination.page,
                        pages: pagination.pages
                    } %}
                {% endif %}
            </div>
    {% elseif tab == 'events' and (is_granted('ROLE_ANNOUNCER') or is_granted('ROLE_ADMIN')) %}
                <div class="admin-card mt-4 ">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                        <h3 class="h6 mb-0">Mes annonces</h3>
                        <button class="btn btn-outline-primary btn-sm btn-pill" type="button" data-bs-toggle="modal" data-bs-target="#createAnnonceModal">
                            Créer une annonce
                        </button>
                    </div>
                    <div class="table-responsive admin-table">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Réservations</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for event in announcerEvents %}
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">{{ event.title }}</div>
                                            <small class="text-muted">{{ event.category.name }}</small>
                                        </td>
                                        <td>{{ event.startAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if event.isPublished %}
                                                <span class="badge-pill badge-success">Publié</span>
                                            {% else %}
                                                <span class="badge-pill badge-warning">Brouillon</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ event.reservedCount }}/{{ event.capacity }}</td>
                                        <td class="text-end">
                                            <a class="btn btn-outline-primary btn-sm" href="{{ path('account_event_edit', {id: event.id}) }}" title="Modifier" aria-label="Modifier">
                                                <img class="icon-svg" src="{{ asset('assets/icons/pencil-square.svg') }}" alt="">
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Aucune annonce.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if pagination %}
                        {% include 'partials/pagination.html.twig' with {
                            route: 'account_profile',
                            params: {tab: 'events'},
                            page: pagination.page,
                            pages: pagination.pages
                        } %}
                    {% endif %}
                </div>
    {% endif %}
</section>

{% if eventForm %}
    <div class="modal fade mks-modal" id="createAnnonceModal" tabindex="-1" aria-labelledby="createAnnonceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title h5" id="createAnnonceModalLabel">Créer une annonce</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(eventForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        {% if not eventForm.vars.valid %}
                            <div class="alert alert-danger">
                                <strong>Champs à corriger :</strong>
                                <ul class="mb-0">
                                    {% for child in eventForm %}
                                        {% for error in child.vars.errors %}
                                            <li>{{ child.vars.label ?: child.vars.name }} : {{ error.message }}</li>
                                        {% endfor %}
                                    {% endfor %}
                                    {% for error in eventForm.vars.errors %}
                                        <li>{{ error.message }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                        {{ form_row(eventForm.title) }}
                        {{ form_row(eventForm.description) }}
                        <div class="row g-3">
                            <div class="col-md-6">{{ form_row(eventForm.startAt) }}</div>
                            <div class="col-md-6">{{ form_row(eventForm.endAt) }}</div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">{{ form_row(eventForm.venueName) }}</div>
                            <div class="col-md-6">{{ form_row(eventForm.district) }}</div>
                        </div>
                        {{ form_row(eventForm.address) }}
                        <div class="row g-3">
                            <div class="col-md-4">{{ form_row(eventForm.capacity) }}</div>
                            <div class="col-md-4">{{ form_row(eventForm.priceCents) }}</div>
                            <div class="col-md-4">{{ form_row(eventForm.category) }}</div>
                        </div>
                        {{ form_row(eventForm.imageFile) }}
                        {{ form_row(eventForm.websiteUrl) }}
                        <div class="d-grid gap-2">
                            <button class="btn btn-coral btn-pill w-100" type="submit" name="save_draft" value="1">Enregistrer dans les brouillons</button>
                            <button class="btn btn-primary btn-pill w-100" type="submit" name="publish" value="1">Publier l'annonce</button>
                        </div>
                    {{ form_end(eventForm) }}
                    <p class="text-muted small mt-3">* champs obligatoires</p>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
