{% extends 'base.html.twig' %}

{% block title %}MKS | Mon profil{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('home') }}">Accueil</a>
    <span class="mx-2">›</span>
    <span>Mon profil</span>
{% endblock %}

{% block body %}
<section class="admin-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h4 mb-1">Mon profil</h1>
            <p class="text-muted mb-0">Mettez à jour vos informations personnelles.</p>
        </div>
    </div>

    <ul class="nav nav-tabs mks-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab-profile-btn" data-bs-toggle="tab" data-bs-target="#tab-profile" type="button" role="tab" aria-controls="tab-profile" aria-selected="true">Profil</button>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" href="{{ path('account_reservations') }}">Réservations</a>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-requests-btn" data-bs-toggle="tab" data-bs-target="#tab-requests" type="button" role="tab" aria-controls="tab-requests" aria-selected="false">Demandes +6</button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab-profile" role="tabpanel" aria-labelledby="tab-profile-btn">
            <div class="admin-card">
                {{ form_start(profileForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    {{ form_errors(profileForm) }}
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <img class="profile-avatar" src="{{ asset(app.user.profileImage ?? 'assets/images/avatar-default.svg') }}" alt="Avatar">
                        <div>
                            <div class="fw-semibold">Bonjour, {{ app.user.username }}</div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">{{ form_row(profileForm.firstName) }}</div>
                        <div class="col-12 col-md-6">{{ form_row(profileForm.lastName) }}</div>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">{{ form_row(profileForm.username) }}</div>
                        <div class="col-12 col-md-6">{{ form_row(profileForm.birthDate) }}</div>
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">{{ form_row(profileForm.email) }}</div>
                    </div>
                    {{ form_row(profileForm.profileImageFile) }}
                    {{ form_row(profileForm.plainPassword) }}
                    <button class="btn btn-primary btn-pill w-100" type="submit">Enregistrer</button>
                {{ form_end(profileForm) }}
            </div>

            {% if not is_granted('ROLE_ANNOUNCER') and not is_granted('ROLE_ADMIN') %}
                <div class="admin-card mt-4">
                    <h2 class="h6 mb-2">Devenir annonceur</h2>
                    <p class="text-muted mb-3">Publiez vos événements en quelques clics.</p>
                    <form method="post" action="{{ path('account_become_announcer') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('become_announcer') }}">
                        <button class="btn btn-secondary btn-pill w-100" type="submit">Activer mon compte annonceur</button>
                    </form>
                </div>
            {% endif %}
        </div>

        <div class="tab-pane fade" id="tab-requests" role="tabpanel" aria-labelledby="tab-requests-btn">
            <div class="admin-card">
                <h2 class="h6 mb-3">Mes demandes (+6 places)</h2>
                <div class="table-responsive admin-table">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Sujet</th>
                                <th>Statut</th>
                                <th>Réponse</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for req in contactRequests %}
                                <tr>
                                    <td>{{ req.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ req.subject }}</td>
                                    <td>
                                        {% if req.status == 'answered' %}
                                            <span class="badge-pill badge-success">Répondu</span>
                                        {% elseif req.status == 'confirmed' %}
                                            <span class="badge-pill badge-success">Confirmé</span>
                                        {% else %}
                                            <span class="badge-pill badge-warning">En attente</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if req.adminResponse %}
                                            <span class="text-muted">{{ req.adminResponse }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Aucune demande.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
