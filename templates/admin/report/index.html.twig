{% extends 'base.html.twig' %}

{% block title %}MKS | Admin signalements{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('home') }}">Accueil</a>
    <span class="mx-2">›</span>
    <span>Admin</span>
    <span class="mx-2">›</span>
    <span>Signalements</span>
{% endblock %}

{% block body %}
<section class="admin-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h4 mb-1">Signalements</h1>
            <p class="text-muted mb-0">Signalements d'événements par les utilisateurs.</p>
        </div>
    </div>

    <ul class="nav nav-tabs mks-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_event_index') }}">Événements</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_user_index') }}">Utilisateurs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_category_index') }}">Catégories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_contact_index') }}">Demandes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('admin_report_index') }}">Signalements</a>
        </li>
    </ul>

    <div class="table-responsive admin-table">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Événement</th>
                    <th>Utilisateur</th>
                    <th>Raisons</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for report in reports %}
                    <tr>
                        <td>{{ report.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ report.event ? report.event.title : '-' }}</td>
                        <td>{{ report.user ? report.user.email : '-' }}</td>
                        <td>
                            {% if report.reasons is iterable %}
                                {{ report.reasons|join(', ') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{{ report.description ?: '-' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun signalement.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if pagination.pages > 1 %}
        <nav class="mt-4" aria-label="Pagination admin signalements">
            <ul class="pagination mks-pagination justify-content-center">
                <li class="page-item {{ pagination.page == 1 ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('admin_report_index', query|merge({'page': pagination.page - 1})) }}">Précédent</a>
                </li>
                {% for p in 1..pagination.pages %}
                    <li class="page-item {{ p == pagination.page ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('admin_report_index', query|merge({'page': p})) }}">{{ p }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {{ pagination.page == pagination.pages ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('admin_report_index', query|merge({'page': pagination.page + 1})) }}">Suivant</a>
                </li>
            </ul>
        </nav>
    {% endif %}
</section>
{% endblock %}
