{% extends 'base.html.twig' %}

{% block title %}MKS | Modifier utilisateur{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('home') }}">Accueil</a>
    <span class="mx-2">›</span>
    <a href="{{ path('admin_user_index') }}">Admin utilisateurs</a>
    <span class="mx-2">›</span>
    <span>Modifier</span>
{% endblock %}

{% block body %}
<section class="admin-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
        <div>
            <h1 class="h4 mb-1">Modifier utilisateur</h1>
            <p class="text-muted mb-0">Email, rôle, vérification et mot de passe.</p>
        </div>
        <a class="btn btn-outline-primary btn-pill" href="{{ path('admin_user_index') }}">Retour</a>
    </div>

    <div class="admin-card">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.isVerified) }}
            {{ form_row(form.role) }}
            {{ form_row(form.plainPassword) }}
            <button class="btn btn-primary btn-pill w-100" type="submit">Mettre à jour</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
