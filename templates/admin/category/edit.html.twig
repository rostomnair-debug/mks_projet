{% extends 'base.html.twig' %}

{% block title %}MKS | Modifier une catégorie{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('home') }}">Accueil</a>
    <span class="mx-2">›</span>
    <a href="{{ path('admin_category_index') }}">Admin catégories</a>
    <span class="mx-2">›</span>
    <span>Modifier</span>
{% endblock %}

{% block body %}
<section class="admin-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
        <div>
            <h1 class="h4 mb-1">Modifier la catégorie</h1>
            <p class="text-muted mb-0">Mettez à jour le nom si besoin.</p>
        </div>
        <a class="btn btn-outline-primary btn-pill" href="{{ path('admin_category_index') }}">Retour</a>
    </div>

    <div class="admin-card">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            <button class="btn btn-primary btn-pill w-100" type="submit">Mettre à jour</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
