{% extends 'base.html.twig' %}

{% block title %}MKS | Admin catégories{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('home') }}">Accueil</a>
    <span class="mx-2">›</span>
    <span>Admin</span>
    <span class="mx-2">›</span>
    <span>Catégories</span>
{% endblock %}

{% block body %}
<section class="admin-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h4 mb-1">Gestion des catégories</h1>
            <p class="text-muted mb-0">Créez et organisez les catégories.</p>
        </div>
    </div>

    <ul class="nav nav-tabs mks-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_event_index') }}">Événements</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_user_index') }}">Utilisateurs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('admin_category_index') }}">Catégories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_contact_index') }}">Demandes</a>
        </li>
    </ul>

    <ul class="nav nav-tabs mks-tabs mb-3" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab-category-list-btn" data-bs-toggle="tab" data-bs-target="#tab-category-list" type="button" role="tab" aria-controls="tab-category-list" aria-selected="true">Liste</button>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" href="{{ path('admin_category_new') }}">Créer</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab-category-list" role="tabpanel" aria-labelledby="tab-category-list-btn">
            <div class="table-responsive admin-table">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Slug</th>
                            <th>Événements</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td class="fw-semibold">{{ category.name }}</td>
                                <td class="text-muted">{{ category.slug }}</td>
                                <td>{{ category.events|length }}</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('admin_category_edit', {id: category.id}) }}">Modifier</a>
                                    <form class="d-inline" method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer cette catégorie ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                                        <button class="btn btn-outline-danger btn-sm" type="submit">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">Aucune catégorie.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {% if pagination.pages > 1 %}
                <nav class="mt-4" aria-label="Pagination admin catégories">
                    <ul class="pagination mks-pagination justify-content-center">
                        <li class="page-item {{ pagination.page == 1 ? 'disabled' : '' }}">
                            <a class="page-link" href="{{ path('admin_category_index', query|merge({'page': pagination.page - 1})) }}">Précédent</a>
                        </li>
                        {% for p in 1..pagination.pages %}
                            <li class="page-item {{ p == pagination.page ? 'active' : '' }}">
                                <a class="page-link" href="{{ path('admin_category_index', query|merge({'page': p})) }}">{{ p }}</a>
                            </li>
                        {% endfor %}
                        <li class="page-item {{ pagination.page == pagination.pages ? 'disabled' : '' }}">
                            <a class="page-link" href="{{ path('admin_category_index', query|merge({'page': pagination.page + 1})) }}">Suivant</a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
