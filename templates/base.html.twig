<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Marseille Kulture Spot{% endblock %}</title>
    <meta name="description" content="{% block meta_description %}Agenda culturel et réservations à Marseille.{% endblock %}">
    <link rel="icon" type="image/svg+xml" href="{{ asset('assets/logos/mks-favicon.svg') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="page-shell">
    <header class="site-header">
        <div class="container-xl">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand brand" href="{{ path('home') }}">
                    <img class="brand-logo" src="{{ asset('assets/logos/mks-logo-main.svg') }}" alt="MKS">
                    <span class="brand-text">
                        <strong>Marseille Kulture <span class="brand-spot">Spot</span></strong>
                        <small>Agenda culturel et réservations</small>
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Afficher le menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <div class="header-search mx-lg-auto order-lg-2">
                        <form method="get" action="{{ path('event_index') }}">
                            <div class="input-group">
                                <input class="form-control" type="search" name="q" placeholder="Rechercher un événement">
                                <button class="btn btn-primary" type="submit">Rechercher</button>
                            </div>
                        </form>
                    </div>
                    <ul class="navbar-nav ms-lg-auto mb-3 mb-lg-0 order-lg-3">
                        <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Accueil</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('event_index') }}">Événements</a></li>
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-avatar-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img class="nav-avatar" src="{{ asset(app.user.profileImage ?? 'assets/images/avatar-default.svg') }}" alt="Avatar">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="{{ path('account_profile') }}">Mon profil</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a class="dropdown-item" href="{{ path('admin_event_index') }}">Admin</a></li>
                                    {% elseif is_granted('ROLE_ANNOUNCER') %}
                                        <li><a class="dropdown-item" href="{{ path('admin_event_index') }}">Mes événements</a></li>
                                    {% endif %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}" aria-label="Connexion">
                                    <span class="icon-svg icon-coral" aria-hidden="true"></span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main class="container-xl py-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}
        {% if block('breadcrumb') is defined %}
            <nav class="breadcrumb-shell text-muted small" aria-label="breadcrumb">
                {% block breadcrumb %}{% endblock %}
            </nav>
        {% endif %}
        {% block body %}{% endblock %}
    </main>

    <footer class="site-footer">
        <div class="container-xl d-flex flex-column flex-md-row justify-content-between gap-2">
            <span>© {{ "now"|date("Y") }} Marseille Kulture Spot</span>
            <div class="d-flex flex-wrap gap-3">
                <a href="{{ path('contact') }}">Contact</a>
                <a href="{{ path('legal_mentions') }}">Mentions légales</a>
                <a href="{{ path('legal_cgu') }}">CGU</a>
            </div>
        </div>
    </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
